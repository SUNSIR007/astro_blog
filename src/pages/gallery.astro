---
import LayoutDefault from "~/layouts/LayoutDefault.astro"
import ImageGallery from "~/components/ImageGallery.astro"
---

<LayoutDefault>
  <h1>图片库</h1>
  <ImageGallery />
</LayoutDefault>

<style>
  .image-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
    gap: 1rem;
  }

  img {
    width: 100%;
    height: auto;
    object-fit: cover;
  }
</style>